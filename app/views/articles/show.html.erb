<h1>Hey There! This is an article!</h1>
<h2><%= @article.title %></h1>
<p><%= @article.body %></p>
<p>
  Created At: <span><%= @article.created_at %></span>
</p>
<p>
  Updated At: <span><%= @article.updated_at %></span>
</p>

<%= link_to "Edit Post", edit_article_path(@article) %>
<%= link_to "Delete Post", article_path(@article), data: { turbo_method: "delete", turbo_confirm: "Are you sure?"}%>
<%= link_to "All Posts", articles_path %>

<h2>Comments</h2>
<% @article.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>

<h2>Add a comment:</h2>
<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>